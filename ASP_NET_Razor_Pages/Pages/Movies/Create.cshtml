@page
@model ASP_NET_Razor_Pages.Models.Movies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="grey-text">Create</h1>

<hr />
<div class="row grey-text">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-2">
                <input asp-for="Movie.Title" class="form-control" />
                <label asp-for="Movie.Title" class="form-label"></label>
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Movie.ReleaseDate" class="form-control" />
                <label asp-for="Movie.ReleaseDate" class="form-label"></label>
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Movie.Genre" class="form-control" />
                <label asp-for="Movie.Genre" class="form-label"></label>
                <span asp-validation-for="Movie.Genre" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Movie.Price" class="form-control" />
                <label asp-for="Movie.Price" class="form-label"></label>
                <span asp-validation-for="Movie.Price" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="MovieRating" class="control-label"></label>
                <select asp-for="MovieRating" asp-items="Model.Ratings" class="form-control">
                    <option value="">-</option>
                </select>
                <span class="text-danger">@Html.DisplayFor(model => Model.EmptyRating)</span>
            </div>
            <div class="form-group my-2">
                <label asp-for="MovieProductionCompany" class="control-label"></label>
                <select asp-for="MovieProductionCompany" asp-items="Model.ProductionCompanies" class="form-control">
                    <option value="">-</option>
                </select>
                <span class="text-danger">@Html.DisplayFor(model => Model.EmptyProductionCompany)</span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary updatebtn form-control btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a-dark" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
